<%= form_for(@movie) do |f| %>
  <% if @movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% @movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="form-group">
    <%= f.collection_select :category_id, @categories, :id, :category, {:include_blank => 'Select a Category'}, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :released %><br>
    <%= f.date_select(:released, :start_year => 1900) %> 
  </div>
  <div class="field">
    <%= f.select :rating, [1, 2, 3, 4, 5], {:include_blank => 'Select a rating'}, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
